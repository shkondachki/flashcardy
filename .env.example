# Database
# PostgreSQL connection string
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE
# For local development: postgresql://postgres:password@localhost:5432/flashcardy
# For production: Use your cloud database connection string (e.g., from Railway, Neon, Supabase)
DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/flashcardy"

# Server Configuration
# Port for the backend server (default: 3000)
PORT=3000

# Environment (development or production)
# When set to 'production', secure cookie flags are enabled
NODE_ENV="development"

# Frontend URL (for CORS configuration)
# For local development: http://localhost:5173
# For production: Your deployed frontend URL (e.g., https://your-app.vercel.app)
FRONTEND_URL="http://localhost:5173"

# Authentication
# JWT secret key - MUST be a secure random string in production
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Admin User Credentials
# These are used by the seed script (npm run db:seed) to create the admin user
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="changeme123"
